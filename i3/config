###***************** 开始工作区操作 *****************###

# 使用 Mouse+$mod 将浮动窗口拖动到所需位置
floating_modifier $mod

# 关闭窗口
bindsym $mod+q kill

# ===============
# === 切换焦点
# ===============
# 切换焦点
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# 使用光标键切换焦点
bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

set $mode_Swith_fix 切换焦点  (H) (J) (K) (L)
bindsym $mod+Ctrl+m mode "$mode_Swith_fix"
mode "$mode_Swith_fix" {
    bindsym h           focus left
    bindsym j           focus down
    bindsym k           focus up
    bindsym l           focus right

    bindsym Left        focus left
    bindsym Down        focus down
    bindsym Up          focus up
    bindsym Right       focus right

    bindsym Return      mode "default"
    bindsym Escape      mode "default"
    bindsym $mod+Ctrl+m mode "default"
}

# ===============
# === 移动容器
# ===============
# 移动容器
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# 使用光标键移动容器
bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

set $mode_Moves 移动容器 (H) (J) (K) (L)
bindsym $mod+Shift+M mode "$mode_Moves"
mode "$mode_Moves" {
    bindsym h            move left
    bindsym j            move down
    bindsym k            move up
    bindsym l            move right

    bindsym Left         move left
    bindsym Down         move down
    bindsym Up           move up
    bindsym Right        move right

    bindsym Return       mode "default"
    bindsym Escape       mode "default"
    bindsym $mod+Shift+M mode "default"
}

# =============
# === 工作区
# =============
# 定义工作区
set $ws1 "1:"
set $ws2 "2:"
set $ws3 "3:"
set $ws4 "4:"
set $ws5 "5:"
set $ws6 "6:"
set $ws7 "7:"
set $ws8 "8:  "
set $ws9 "9:  "
set $ws10 "10:  "

# 切换工作区
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# ===============
# === 移动跟随
# ===============
# 移动当前容器到指定窗口并跟随
bindsym $mod+Shift+1 move container to workspace number $ws1,  workspace $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2,  workspace $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3,  workspace $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4,  workspace $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5,  workspace $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6,  workspace $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7,  workspace $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8,  workspace $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9,  workspace $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10, workspace $ws10

# 将工作区移至下一个/上一个工作区并跟随
bindsym $mod+mod1+h     move container to workspace prev, workspace prev
bindsym $mod+mod1+l     move container to workspace next, workspace next

bindsym $mod+mod1+Right move container to workspace prev, workspace prev
bindsym $mod+mod1+left  move container to workspace next, workspace next

set $mode_move_work_and 移动并跟随工作区  (H)  (L)
bindsym $mod+mod1+m mode "$mode_move_work_and"
mode "$mode_move_work_and" {
    bindsym h           move container to workspace prev, workspace prev
    bindsym l           move container to workspace next, workspace next

    bindsym Left        move container to workspace prev, workspace prev
    bindsym Right       move container to workspace next, workspace next

    bindsym Return      mode "default"
    bindsym Escape      mode "default"
    bindsym $mod+mod1+m mode "default"
}

# =================
# === 移动不跟随
# =================
# 移动当前容器到指定窗口不跟随
bindsym $mod+Ctrl+1 move container to workspace number $ws1
bindsym $mod+Ctrl+2 move container to workspace number $ws2
bindsym $mod+Ctrl+3 move container to workspace number $ws3
bindsym $mod+Ctrl+4 move container to workspace number $ws4
bindsym $mod+Ctrl+5 move container to workspace number $ws5
bindsym $mod+Ctrl+6 move container to workspace number $ws6
bindsym $mod+Ctrl+7 move container to workspace number $ws7
bindsym $mod+Ctrl+8 move container to workspace number $ws8
bindsym $mod+Ctrl+9 move container to workspace number $ws9
bindsym $mod+Ctrl+0 move container to workspace number $ws10

# 将工作区移至下一个/上一个工作区不跟随
bindsym $mod+mod1+Ctrl+h     move container to workspace prev
bindsym $mod+mod1+Ctrl+l     move container to workspace next

bindsym $mod+mod1+Ctrl+Right move container to workspace prev
bindsym $mod+mod1+Ctrl+Left  move container to workspace next

set $mode_move_work 移动不跟随工作区  (H)  (L)
bindsym $mod+Ctrl+Shift+m mode "$mode_move_work"
mode "$mode_move_work" {
    bindsym h                 move container to workspace prev
    bindsym l                 move container to workspace next

    bindsym Left              move container to workspace prev
    bindsym Right             move container to workspace next

    bindsym Return            mode "default"
    bindsym Escape            mode "default"
    bindsym $mod+Ctrl+Shift+m mode "default"
}

# 将工作区移至下一个输出
bindsym $mod+Ctrl+h move workspace to output right
bindsym $mod+Ctrl+j move workspace to output down
bindsym $mod+Ctrl+k move workspace to output up
bindsym $mod+Ctrl+l move workspace to output left

bindsym $mod+Ctrl+Shift+Left  move workspace to output left
bindsym $mod+Ctrl+Shift+Right move workspace to output right
bindsym $mod+Ctrl+Shift+Up    move workspace to output up
bindsym $mod+Ctrl+Shift+Down  move workspace to output down

set $mode_move_next_work 移动工作区到外接显示  (H) (J) (K) (L)
bindsym $mod+Ctrl+mod1+m mode "$mode_move_next_work"
mode "$mode_move_next_work" {
    bindsym h                move workspace to output right
    bindsym j                move workspace to output down
    bindsym k                move workspace to output up
    bindsym l                move workspace to output left

    bindsym Left             move workspace to output left
    bindsym Down             move workspace to output down
    bindsym Up               move workspace to output up
    bindsym Right            move workspace to output right

    bindsym Return           mode "default"
    bindsym Escape           mode "default"
    bindsym $mod+Ctrl+mod1+m mode "default"
}

# 导航下一个/上一个工作区
bindsym $mod+Ctrl+Shift+l workspace next
bindsym $mod+Ctrl+Shift+h workspace prev

bindsym $mod+Ctrl+Right   workspace next
bindsym $mod+Ctrl+Left    workspace prev

set $mode_move 切换工作区  (H)  (L)
bindsym $mod+m mode "$mode_move"
mode "$mode_move" {
    bindsym h      workspace prev
    bindsym l      workspace next

    bindsym Left   workspace prev
    bindsym Right  workspace next

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+m mode "default"
}

# 容器、窗口移动到当前窗口
bindsym $mod+F1  [class="firefox"]   move workspace current
bindsym $mod+F2  [class="chrome"]    move workspace current
bindsym $mod+F3  [class="Chromium"]  move workspace current
bindsym $mod+F4  [class="Alacritty"] move workspace current
bindsym $mod+F5  [class="*"] move workspace current
bindsym $mod+F11 exec $HOME/.config/i3/quickswitch.py -m

# 快速跳转到指定的软件窗口
bindsym $mod1+F1 [class="electron-qq"]   focus
bindsym $mod1+F2 [class="微信"]          focus
bindsym $mod1+F3 [class="dingtalklinux"] focus

# =======================================
# === 10以后工作区，切换、跟随、不跟随
# =======================================
bindsym $mod+i       exec i3-input -F 'workspace "%s"' -P 'Workspace: '
bindsym $mod+Shift+i exec $HOME/.config/i3/switch_workspace.sh
bindsym $mod+Ctrl+i  exec i3-input -F 'move container to workspace "%s"' -P 'Move to workspace: '

# ===============
# === 窗口操作
# ===============
# 调整窗口大小
bindsym Shift+Ctrl+h     resize shrink width  10 px or 10 ppt
bindsym Shift+Ctrl+k     resize grow   height 10 px or 10 ppt
bindsym Shift+Ctrl+j     resize shrink height 10 px or 10 ppt
bindsym Shift+Ctrl+l     resize grow   width  10 px or 10 ppt

bindsym Shift+Ctrl+Left  resize shrink width  10 px or 10 ppt
bindsym Shift+Ctrl+Down  resize grow   height 10 px or 10 ppt
bindsym Shift+Ctrl+Up    resize shrink height 10 px or 10 ppt
bindsym Shift+Ctrl+Right resize grow   width  10 px or 10 ppt

set $resize 调整大小 (H) (J) (K) (L)
bindsym $mod+r mode "$resize"
mode "$resize" {
        bindsym h      resize shrink width  10 px or 10 ppt
        bindsym j      resize grow   height 10 px or 10 ppt
        bindsym k      resize shrink height 10 px or 10 ppt
        bindsym l      resize grow   width  10 px or 10 ppt

        bindsym Left   resize shrink width  10 px or 10 ppt
        bindsym Down   resize grow   height 10 px or 10 ppt
        bindsym Up     resize shrink height 10 px or 10 ppt
        bindsym Right  resize grow   width  10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

