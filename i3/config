    bindsym w       exec wechat-uos %U,                                mode "default"
    bindsym d       exec dingtalk-linux,                               mode "default"

    bindsym Escape  mode "default"
    bindsym Return  mode "default"
    bindsym $mod1+x mode "default"
}

